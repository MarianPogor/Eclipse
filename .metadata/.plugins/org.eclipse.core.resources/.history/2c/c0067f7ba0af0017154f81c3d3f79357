public class printInverse
{
   
   public  String textReverse(String text)
   {  
     
      
      return text;
   }

   public static void main(String[] args)
   {
      while(true)
      {
         String text;
         String quit;
         if(text==quit)
         {
            System.out.println("Enter a string:");
            
